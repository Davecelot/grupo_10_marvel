<%- include("../partials/head.ejs")%>

     <body background="/images/fondo.jpg">
          <!-- Inicia la zona de header -->
          <%- include("../partials/header.ejs")%>
               <link rel="stylesheet" href="/css/register.css">
               <script src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.6.0/validator.min.js"></script>
               <script src="/js/validatorLogin.js"></script>
               </head>

               <!-- Formulario Registro -->
               <div class="container registro-cont">
                    <div class="registro">
                         <div class="form">
                              <a href="/home"><img src="/images/logo-white.svg" class="logo-w"></a>
                              <h3 class="titulo-form">Ingresa</h3>
                              <div class="formulario">
                                   <form action="#" method="POST" class="create-form" id="login-form">
                                        <% if (locals.errors && errors.credenciales) { %>
                                             <div class="text-danger">
                                                  <%= errors.credenciales.msg %>
                                             </div>
                                             <% } %>
                                                  <div class="control-formulario">
                                                       <label>Correo Electrónico:</label>
                                                       <input type="email" name="correo" class="control"
                                                            placeholder="Escribe aquí tu correo" required
                                                            value="<%= locals.oldData ? oldData.correo : null %>">
                                                  </div>
                                                  <% if (locals.errors && errors.correo) { %>
                                                       <div class="text-danger">
                                                            <%= errors.correo.msg %>
                                                       </div>
                                                       <% } %>
                                                            <div class="control-formulario">
                                                                 <label>Contraseña:</label>
                                                                 <input type="password" name="password" class="control"
                                                                      placeholder="Escribe aquí tu contraseña"
                                                                      title="Ingresa una contraseña válida" required>
                                                            </div>
                                                            <% if (locals.errors && errors.password) { %>
                                                                 <div class="text-danger">
                                                                      <%= errors.password.msg %>
                                                                 </div>
                                                                 <% } %>
                                                                      <section class="usuario">
                                                                           <label>Recordar
                                                                                Usuario<input type="checkbox"
                                                                                     name="preservar"
                                                                                     id="preservar"></label>
                                                                      </section>
                              <div class="control-formulario">
                                   <div class="container botones">
                                        <button type="reset" class="boton-formulario" id="reset">Borrar</button>
                                        <button type="submit" class="boton-formulario" id="submit">Enviar</button>
                                   </div>
                              </div>
                              <label>¿Ya tienes una cuenta? <a href="/users/login">Ingresa aquí</a></label>
                              <div class="error-list"></div>
                              </form>

                         </div>
                    </div>
               </div>
               <!-- Termina la zona de formulario -->
               <!-- Inicia la zona de footer -->
               <%- include("../partials/footer.ejs")%>
                    <!-- Aqui termina la seccion Footer -->
     </body>

     </html>