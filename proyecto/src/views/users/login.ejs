<%- include("../partials/head.ejs")%>

     <body background="/images/fondo.jpg">
          <!-- Inicia la zona de header -->
          <%- include("../partials/header.ejs")%>

               <!-- Formulario Registro -->
               <conteiner class="registro-cont">
                    <div class="registro">
                         <div class="form">
                              <a href="/home"><img src="/images/logo-white.svg" class="logo-w"></a>
                              <h3 class="titulo-form">Ingresa</h3>
                              <div class="formulario">
                                   <form action="#" method="POST" class="create-form">
                                        <div class="control-formulario">
                                             <label>Correo:</label>
                                             <input type="email" name="correo" class="control"
                                                  placeholder="Escribe aquí tu correo" required>
                                        </div>
                                        <div class="control-formulario">
                                             <label>Contraseña:</label>
                                             <input type="password" name="contraseña" class="control"
                                                  placeholder="Escribe aquí tu contraseña" required minlength="8"
                                                  title="Ingresa una contraseña válida">
                                        </div>
                              </div>
                              <div class="control-formulario">
                                   <conteiner class="botones">
                                        <button type="reset" class="boton-formulario" id="reset">Borrar</button>
                                        <button type="submit" class="boton-formulario" id="submit">Enviar</button>
                                   </conteiner>
                              </div>
                              </form>

                         </div>
                    </div>
               </conteiner>
               <!-- Aqui inicia la seccion Footer -->
               <!-- Escribir aqui el codigo de  la seccion Footer -->
               <%- include("../partials/footer.ejs")%>
                    <!-- Aqui termina la seccion Footer -->
     </body>

     </html>