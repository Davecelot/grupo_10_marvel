    <main class="main-productList">
        <div class="container-list">
            <div class="container-top">
                <div class="back-and-title">
                    <a href="/admin/index"><i class="fa-solid fa-arrow-left"></i></a><p>Películas</p>
                </div>

                <a href="/admin/createProducts"><button type="submit" id="new-product" class="button-add">Agregar película</button></a>
            </div>     

            <div class="product-list">
                <div class="checkbox-group">
                    <input type="checkbox" name="select-all" value="select-all">
                    <label for="select-all">Seleccionar todas las películas</label>
                </div>

                <div class="movies-list">

                    <% for (i = 0; i < movies.length; i++) { %>

                    <div class="movie-item">
                        <div class="input-and-movie">
                            <input type="checkbox" name="select-all" value="select-all">
                            <div class="movie-and-title">
                                <img src="<%= movies[i].image %>" class="movie-img">
                                <p><%= movies[i].name %></p>
                            </div>
                        </div>

                        <div class="icon-btns">
                            <a href="/admin/editProducts/<%= movies[i].id %>"><i class="fa-solid fa-pen"></i></a>
                            <a href="/admin/editProducts/delete/<%= movies[i].id %>"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </div>

                    <% } %>
                </div>
            </div>
        </div>
    </main>

