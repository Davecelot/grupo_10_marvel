<%- include("../partials/head.ejs")%>

     <body>
          <%- include("../partials/header.ejs")%>
               <link rel="stylesheet" href="/css/index.css">
               </head>

               <main>
                    <section class="common-category">
                         <% for(let i = 0; i < generosAll.length; i++ ) { %>
                              <h2>
                                   <%= generosAll[i].name %>
                              </h2>

                              <div class="carousel-common-category-cards">

                                   <% movies.forEach(movie=> { %>
                                        <% if (generosAll[i].id==movie.genreId) { %>
                                             <div class="product-common-card">
                                                  <a href="/products/productDetail/<%= movie.id %>">
                                                  <img src="<%= movie.image %>"
                                                       alt="A landscape poster of the movie <%= movie.name %>"
                                                       class="image-common-card"></a>
                                             </div>
                                             <% }; %>>
                                                  <% }); %>

                              </div>

                              <% } %>
                    </section>
               </main>




               <%- include("../partials/footer.ejs")%>

     </body>

     </html>