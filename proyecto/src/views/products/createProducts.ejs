<%- include("../partials/head.ejs")%>

    <body>
        <!-- Inicia la zona de header -->
        <%- include("../partials/header.ejs")%>

            <!-- Inicia la zona de main -->

            <!-- Formulario Creacion -->
            <conteiner class="registro-cont">
                <div class="registro">
                    <div class="form">
                        <a href="/home"><img src="/images/logo-white.svg" class="logo-w"></a>
                        <h3 class="titulo-form">Nueva Pelicula</h3>
                        <div class="formulario">
                            <form action="/crear-cuenta" method="POST" class="create-form">
                                <div class="control-formulario">
                                    <label>Titulo:</label>
                                    <input type="text" name="titulo" class="control"
                                        placeholder="Escribe aquí el titulo" required autofocus pattern="[a-zA-Z\s]+"
                                        title="Ingresa un titulo válido">
                                </div>
                                <div class="control-formulario">
                                    <label>Descripcion:</label>
                                    <textarea name="descripcion" class="control"
                                        placeholder="Escribe aquí la descripcion" required></textarea>
                                </div>
                                <div class="control-formulario">
                                    <label>Precio:</label>
                                    <input type="number" name="precio" class="control"
                                        placeholder="Escribe aquí el precio" required title="Ingresa un precio válido">
                                </div>
                                <div class="control-formulario">
                                    <label>Imagen:</label>
                                    <input type="file" name="imagen" class="control" required
                                        title="Ingresa una imagen válida">
                                </div>
                                <div class="control-formulario">
                                    <label for="genero">Genero:</label>
                                    <select id="genero">
                                        <option value="accion">Accion</option>
                                        <option value="aventura">Aventura</option>
                                        <option value="comedia">Comedia</option>
                                        <option value="drama">Drama</option>
                                        <option value="infantil">Infantil</option>
                                        <option value="musical">Musical</option>
                                        <option value="romantica">Romantica</option>
                                        <option value="terror">Terror</option>
                                    </select>
                                </div>
                        </div>
                        <div class="control-formulario">
                            <conteiner class="botones">
                                <button type="reset" class="boton-formulario" id="reset">Borrar</button>
                                <button type="submit" class="boton-formulario" id="submit">Enviar</button>
                            </conteiner>
                        </div>
                        </form>
                    </div>
                </div>
            </conteiner>

            <!-- termina  la zona de main -->
            <!-- Inicia la zona de footer -->
            <%- include("../partials/footer.ejs")%>
    </body>

    </html>